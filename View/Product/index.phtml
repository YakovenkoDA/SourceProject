<?php if(!empty($products)) :?>

<!--include limit for items-->
<?php include SITE_PATH.DS.'View'.DS.'limit.phtml';?>
<div>

<!-- menu for sort-->
<div id="productTitle">
    <p>Cортировать по:
    
    <a href='<?= $url.$currentPage;?>/orderby/name'>Имени<?php if($orderBy == 'name') :?>&darr;<?php endif; ?></a>
    <a href='<?= $url.$currentPage;?>/orderby/price'>Цене<?php if($orderBy == 'price') :?>&darr;<?php endif; ?></a>
